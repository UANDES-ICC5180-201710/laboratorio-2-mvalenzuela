<p id="notice"><%= notice %></p>

<h1>People Courses</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people_courses.each do |people_course| %>
      <tr>
        <td><%= people_course.person_id %></td>
        <td><%= people_course.course_id %></td>
        <td><%= link_to 'Show', people_course %></td>
        <td><%= link_to 'Edit', edit_people_course_path(people_course) %></td>
        <td><%= link_to 'Destroy', people_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

