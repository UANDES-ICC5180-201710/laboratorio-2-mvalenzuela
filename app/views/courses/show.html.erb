<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Code:</strong>
  <%= @course.code %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @teacher_name %>
</p>

<h2>Students in this Course</h2>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @people_in_course.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag({:controller=>"courses", :action=>"add_student_to_course"}, method: :get) do %>
  <%= submit_tag 'add student to this course', name: nil %>
  <%= hidden_field_tag :course_id , @course.id %>
<% end %>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
